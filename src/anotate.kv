
<anotateWidget>:
    StackLayout:
        orientation: 'lr-tb'
        size_hint: None,None
        size: root.width ,root.height*0.05
        pos: 0,root.height*0.5
        Button:
            id: select
            text: 'Select set'
            size_hint: 0.4,1
            on_release: root.dropdown.open

        Button:
            text: 'Load'
            size_hint: 0.4,1
        Button:
            text: 'Save'
            size_hint: 0.1,1
        Button:
            text: 'Exit'
            size_hint: 0.1,1
            on_release: root.quitbtn()


